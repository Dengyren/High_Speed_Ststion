@model DAL.TB_Tollgate

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="panel panel-default" style="margin-top: 20px;margin-right:30px;margin-left:20px">
        <h1 class="panel-heading" style="background-color:white">修改站点信息</h1>
    </div>
    <div class="panel panel-default" id="my_tb" style="margin-right:30px;margin-left:20px">


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <div class="form-group" style="font-size:larger">
                @Html.LabelFor(model => model.站点名称, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.站点名称, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.站点名称, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="font-size:larger">
                @Html.LabelFor(model => model.收费金额, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.收费金额, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.收费金额, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="font-size:larger;display:none" >
                @Html.LabelFor(model => model.归属管区id, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.归属管区id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.归属管区id, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="font-size:larger">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="保存" class="btn btn-warning" />
                </div>
            </div>
        </div>
        }

        <div>
            @Html.ActionLink("返回", "Index")
        </div>
    </div>
</div>